<div class="modal fade" tabindex="-1" role="dialog" id="modalAddToy">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Add Your Toy</h4>
      </div>
      <div class="modal-body">

        <form class="form-horizontal">
          <div class="form-group">
            <label for="addToyName" class="col-sm-2 control-label">Toy Name</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="addToyName" placeholder="What do you call this toy?">
            </div>
          </div>
          <div class="form-group">
            <label for="addToyImg" class="col-sm-2 control-label">Image URL</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="addToyImg" placeholder="What does this toy look like?">
            </div>
          </div>
          <div class="form-group">
            <label for="addToyPrice" class="col-sm-2 control-label">Price</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="addToyPrice" placeholder="How much are you charging?">
            </div>
          </div>
          <div class="form-group">
            <label for="addToyDesc" class="col-sm-2 control-label">Description</label>
            <div class="col-sm-10">
              <textarea rows="3" class="form-control" id="addToyDesc" placeholder="What is this toy?"></textarea>
            </div>
          </div>
        </form>

      </div>
      <div class="modal-footer">
        <button id="addToy" type="submit" class="btn btn-default">Add Toy</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
