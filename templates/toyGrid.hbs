{{> addToy}}

{{#each toys}}
  {{!-- here's the card --}}
  <div class="col-sm-6 col-md-4 toyCard" id="card--{{id}}">
    <div class="thumbnail">
      <button type="button" class="btn btn-delete delete" id="{{id}}"><span>&times;</span></button>
      <a href="#" data-toggle="modal" data-target="#modal--{{id}}">
        <img src="{{imgUrl}}" alt="{{desc}}">
        <div class="caption">
          <h4>{{name}}</h4>
        </div>
      </div>
    </a>
  </div>
{{/each}}